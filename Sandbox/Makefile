ifeq ($(config),debug)
  RESCOMP = windres
  TARGETDIR = ../bin/Debug-linux-x86_64/Sandbox
  TARGET = $(TARGETDIR)/Sandbox
  OBJDIR = ../bin-int/Debug-linux-x86_64/Sandbox
  DEFINES +=
  INCLUDES += -I../Dependencies/GLFW/include -I../Dependencies/GLEW/include -Iinclude -Ivendor/stb_image
  FORCE_INCLUDE +=
  ALL_CPPFLAGS += $(CPPFLAGS) -MMD -MP $(DEFINES) $(INCLUDES)
  ALL_CFLAGS += $(CFLAGS) $(ALL_CPPFLAGS) -m64
  ALL_CXXFLAGS += $(CXXFLAGS) $(ALL_CPPFLAGS) -m64
  ALL_RESFLAGS += $(RESFLAGS) $(DEFINES) $(INCLUDES)
  LIBS += ../Dependencies/GLFW/bin/Debug-linux-x86_64/GLFW/libGLFW.a -lGL -ldl -l:libGLEW.a
  LDDEPS += ../Dependencies/GLFW/bin/Debug-linux-x86_64/GLFW/libGLFW.a
  ALL_LDFLAGS += $(LDFLAGS) -L../Dependencies/GLEW/lib -L/usr/lib64 -m64 -s -pthread
  LINKCMD = $(CXX) -o "$@" $(OBJECTS) $(RESOURCES) $(ALL_LDFLAGS) $(LIBS)
  define PREBUILDCMDS
  endef
  define PRELINKCMDS
  endef
  define POSTBUILDCMDS
  endef
all: prebuild prelink $(TARGET)
	@:

endif

